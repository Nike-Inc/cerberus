<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--suppress SqlNoDataSourceInspection -->
<mapper namespace="com.nike.cerberus.mapper.AuthTokenMapper">

  <insert id="createAuthToken" parameterType="AuthTokenRecord">
    INSERT INTO AUTH_TOKENS (
      ID,
      TOKEN_HASH,
      CREATED_TS,
      EXPIRES_TS,
      PRINCIPAL,
      PRINCIPAL_TYPE,
      IS_ADMIN,
      GROUPS,
      REFRESH_COUNT
    )
    VALUES (
      #{record.id},
      #{record.tokenHash},
      #{record.createdTs},
      #{record.expiresTs},
      #{record.principal},
      #{record.principalType},
      #{record.isAdmin},
      #{record.groups},
      #{record.refreshCount}
    )
  </insert>

  <select id="getAuthTokenFromHash" resultType="AuthTokenRecord">
    SELECT
      ID,
      TOKEN_HASH,
      CREATED_TS,
      EXPIRES_TS,
      PRINCIPAL,
      PRINCIPAL_TYPE,
      IS_ADMIN,
      GROUPS,
      REFRESH_COUNT
    FROM
      AUTH_TOKENS
    WHERE
      TOKEN_HASH = #{hash}
  </select>

  <delete id="deleteAuthTokenFromHash">
    DELETE FROM
      AUTH_TOKENS
    WHERE
      TOKEN_HASH = #{hash}
  </delete>

  <delete id="deleteExpiredTokens">
    DELETE FROM AUTH_TOKENS WHERE EXPIRES_TS &lt; CURRENT_TIME LIMIT #{limit}
  </delete>

</mapper>
