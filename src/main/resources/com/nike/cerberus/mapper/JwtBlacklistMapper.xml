<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--suppress SqlNoDataSourceInspection -->
<mapper namespace="com.nike.cerberus.mapper.JwtBlacklistMapper">

  <select id="getBlacklist" resultType="String">
    SELECT
      ID
    FROM
      JWT_BLACKLIST
  </select>

  <insert id="addToBlacklist" parameterType="JwtBlacklistRecord">
    INSERT INTO JWT_BLACKLIST (
      ID,
      EXPIRES_TS
    )
    VALUES (
             #{record.id},
             #{record.expiresTs}
           )
  </insert>

  <delete id="deleteExpiredTokens">
    DELETE FROM JWT_BLACKLIST WHERE EXPIRES_TS &lt; CURRENT_TIME
  </delete>
</mapper>